{
  "manifest_version": 3,
  "name": "ファミリーマート新商品画像ダウンローダー",
  "version": "1.6.1",
  "description": "ファミリーマートの今週・来週の新商品ページから5個以上の商品がある場合に画像を一括ダウンロードします",
  "permissions": [
    "downloads",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.family.co.jp/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.family.co.jp/goods/newgoods.html",
        "https://www.family.co.jp/goods/newgoods.html*",
        "https://www.family.co.jp/goods/newgoods/nextweek.html",
        "https://www.family.co.jp/goods/newgoods/nextweek.html*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
